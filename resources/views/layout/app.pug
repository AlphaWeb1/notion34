    link(rel="stylesheet" href="/public/assets/bootstrap/css/bootstrap.min.css")
    style(type="text/css").
      .app{
        content: "";
        width: 100%;
        height: 100vh;
        /* min-height: 675px; */
        display: flex;
        flex-direction: row-reverse;
        background: url(./public/images/backgrounds/coming-soon-bg.jpg);
