html(lang='en')
  head
    meta( charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Notion 34: Login
    link(rel="shortcut icon" href="/public/images/logos/svg/Notion.svg" type="image/x-icon")
    link(rel="stylesheet" href="/public/assets/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet" href="/css/css.css")
  body
    div(class="row justify-content-center login-section py-5 no-gutters px-4")
      div(class="col-xs-12 col-sm-10 col-md-8 col-lg-6 col-xl-6")
        form(method="post" action="/register")
          div(class="form-group")
            label(for="firstname" class="form-label") First Name
            input(type="text" name="first_name" class="form-control" id="firstname" placeholder="Enter first name..." required)
          div(class="form-group")
            label(for="lastname" class="form-label") Last Name
            input(type="text" name="last_name" class="form-control" id="lastname" placeholder="Enter last name..." required)
          div(class="form-group")
            label(for="phone" class="form-label") Phone Number
            input(type="tel" name="phone" class="form-control" id="phone" placeholder="Enter phone number..." required)
          div(class="form-group")
            label(for="email" class="form-label") Email/Username
            input(type="email" name="email" class="form-control" id="email" placeholder="Enter email..." required)
          div(class="form-group")
            label(for="password" class="form-label") Password
            input(type="password" name="password" class="form-control" id="password" placeholder="Enter password..." required)
          div(class="form-group d-flex")
            input(type="checkbox" name="terms" class="form-check" style="margin-top: 6px;" id="terms" required)
            span(class="px-2") By checking means you agree with the website 
            a(href="#") terms and condition
          if error
            div(class="alert") Error:
              h4(class="text-danger")= error
              if errors
                each err in errors
                  span(class="p-2 border-danger text-danger")= err
                  br
          div(class="form-group")
            button(type="submit" name="submit" class="btn btn-block btn-outline-dark" id="register" value="register")
              i(class="fa fa-sign-in")
              span Register
    script(src="/public/assets/jquery/jquery.min.js")
    script(src="/public/assets/bootstrap/js/bootstrap.min.js")
    script(src="/js/js.js")